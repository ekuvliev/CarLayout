            android:layout_height="80dp" />
        <TextView
            android:id= "@+id/laferrari_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf= "@id/laferrari"
            android:text= " 2015 Ferrari LaFerrari"
            android:textSize="20dp"
            android:textColor="Black"/>
        <TextView
            android:id= "@+id/laferrari_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/laferrari_name"
            android:layout_toRightOf="@id/laferrari"
            android:text= " Price: $1,420,000"
            android:textSize="20dp"
            android:textColor="Black"/>
        <TextView
