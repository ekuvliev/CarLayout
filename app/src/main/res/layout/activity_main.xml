<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.eekuvliev.carlayout.MainActivity">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="495dp"
        android:layout_height="80dp"
        android:background="@color/silver"
        tools:layout_editor_absoluteY="1dp"
        tools:layout_editor_absoluteX="1dp">
        <ImageView
            android:id= "@+id/m720s"
            android:src= "@drawable/m720s"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <TextView
            android:id= "@+id/m720s_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf= "@id/m720s"
            android:text= " 2017 McLaren 720s"
            android:textSize="20dp"
            android:textColor="Black"/>
        <TextView
            android:id= "@+id/m720s_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/m720s_name"
            android:layout_toRightOf="@id/m720s"
            android:text= " Price: $288,845"
            android:textSize="20dp"
            android:textColor="Black"/>
        <TextView
            android:id= "@+id/m720s_hp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/m720s_price"
            android:layout_toRightOf="@id/m720s"
            android:text= " 710 hp"
            android:textSize="20dp"
            android:textColor="Black"/>

    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
