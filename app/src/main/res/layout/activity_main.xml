            android:layout_height="wrap_content"
            android:layout_below="@id/i8_name"
            android:layout_toRightOf="@id/i8"
            android:text= " Price: $144,295"
            android:textSize="20dp"
            android:textColor="Black"/>
        <TextView
            android:id= "@+id/i8_hp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/i8_price"
            android:layout_toRightOf="@id/i8"
            android:text= " 357 hp"
            android:textSize="20dp"
            android:textColor="Black"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
