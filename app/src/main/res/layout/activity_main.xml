            android:layout_height="wrap_content"
            android:layout_below="@id/laferrari_price"
            android:layout_toRightOf="@id/laferrari"
            android:text= " 789 hp"
            android:textSize="20dp"
            android:textColor="Black"/>

    </RelativeLayout>

